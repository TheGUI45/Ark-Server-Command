{
  "name": "ark-server-command",
  "version": "0.2.1",
  "main": "dist/main/main.js",
  "build": {
    "appId": "com.thegui45.asa-server-manager",
    "productName": "ASA Server Manager",
    "directories": {
      "buildResources": "build"
    },
    "files": [
      "build/**/*",
      "dist/**/*",
      "src/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraMetadata": {
      "main": "dist/main/main.js"
    },
    "win": {
      "icon": "build/icon.ico",
      "target": ["nsis"],
      "artifactName": "${productName}-${version}-setup.${ext}",
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": false,
      "allowToChangeInstallationDirectory": true,
      "runAfterFinish": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "ASA Server Manager"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": ["dmg"],
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": ["AppImage"],
      "category": "Utility",
      "icon": "build/icon.png"
    }
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "extract-zip": "^2.0.1",
    "ini": "^4.1.3",
    "node-cron": "^3.0.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tar": "^7.4.3",
    "uuid": "^11.0.3",
    "zod": "^3.23.8",
    "chart.js": "^4.4.1",
    "react-chartjs-2": "^5.2.0",
    "pidusage": "^3.0.2"
  },
  "devDependencies": {
    "@types/node": "^22.7.5",
    "@types/uuid": "^9.0.7",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "electron": "^30.0.2",
    "electron-builder": "^24.13.3",
    "png2icons": "^2.0.1",
    "typescript": "^5.6.3",
    "vite": "^5.4.8",
    "wait-on": "^7.2.0"
  },
  "scripts": {
    "dist": "electron-builder"
  }
}
